# ===================================
# DOCKER CONFIGURATION
# ===================================
DOCKER_TARGET=development
ENVIRONMENT=development
NODE_ENV=development

# ===================================
# CUSTOM PORTS (avoiding common ones)
# ===================================
BACKEND_PORT=8547
FRONTEND_PORT=3247
REDIS_PORT=6479
NGINX_PORT=8080
NGINX_SSL_PORT=8443

# ===================================
# DATABASE (EXTERNAL MARIADB)
# ===================================
DATABASE_URL=mysql+pymysql://medialab:password@localhost:3306/medialab_db
DB_HOST=localhost
DB_PORT=3306
DB_NAME=medialab_db
DB_USER=medialab
DB_PASSWORD=your_secure_password

# ===================================
# REDIS CONFIGURATION
# ===================================
REDIS_PASSWORD=medialab2025
REDIS_URL=redis://:medialab2025@localhost:6479

# ===================================
# SECURITY
# ===================================
SECRET_KEY=your-super-secret-key-here-change-in-production
JWT_SECRET_KEY=another-secret-key-for-jwt
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# ===================================
# EMAIL CONFIGURATION (for invitations)
# ===================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@medialab.edu.gt

# ===================================
# DEBUG & LOGGING
# ===================================
DEBUG=true
LOG_LEVEL=INFO

# ===================================
# UPLOADS & STORAGE
# ===================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=50MB
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp,gif
ALLOWED_VIDEO_TYPES=mp4,mov,avi,mkv

# ===================================
# PRODUCTION ONLY
# ===================================
# DOCKER_TARGET=production
# ENVIRONMENT=production
# NODE_ENV=production
# DEBUG=false